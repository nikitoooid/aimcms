<?xml version="1.0" encoding="UTF-8"?>
urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  url
    loc = request.base_url
    lastmod = @pages.first.updated_at.strftime("%Y-%m-%d")

  - @pages.each do |page|
    url
      loc = "#{request.base_url}/#{page.slug}"
      lastmod = page.updated_at.strftime("%Y-%m-%d")

  - if @setting.active_store
    - @products.each do |product|
      url
        loc = "#{request.base_url}/products/#{product.id}"
        lastmod = product.updated_at.strftime("%Y-%m-%d")